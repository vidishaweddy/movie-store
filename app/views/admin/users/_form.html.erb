<%= simple_form_for [:admin, @user], html: { class: 'pure-form pure-form-aligned' } do |f| %>
  <div class="pure-g">
    <div class="pure-u-1 pure-u-md-1-2">
      <div class="pure-u-1 pure-u-md-1-1">
        <%= f.input :email, disabled: true, hint: 'Email cannot be changed', input_html: { class: 'pure-input-1'} %>
      </div>
      <div class="pure-u-1 pure-u-md-1-1">
        <%= f.input :first_name, input_html: { class: 'pure-input-1'} %>
      </div>
      <div class="pure-u-1 pure-u-md-1-1">
        <%= f.input :last_name, input_html: { class: 'pure-input-1'} %>
      </div>
      <div class="pure-u-1 pure-u-md-1-1">
        <%= f.input :dob, as: :date, start_year: Date.today.year - 90,
                                end_year: Date.today.year - 12 %>
      </div>
      <div class="pure-u-1 pure-u-md-1-1">
        <%= f.input :address, input_html: { class: 'pure-input-1'} %>
      </div>
      <div class="pure-u-1 pure-u-md-1-1">
        <%= f.input :age, input_html: { class: 'pure-input-1'} %>
      </div>
      <div class="pure-u-1 pure-u-md-1-1">
        <%= f.input :admin, as: :boolean, checked_value: true, unchecked_value: false %>
      </div>
    </div>
  </div>

  <div class="pure-controls">
    <%= save_button %>
    <%= cancel_button %>
  </div>
<% end %>
