<div class="admin-search">
  <%= form_tag(admin_users_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search User", id: "search-form" %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>

<table id="admin-table" class="pure-table pure-table-striped pure-table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Date of Birth</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user, admin_user_path(user) %>
        </td>
        <td>
          <%= user.first_name %>
        </td>
        <td>
          <%= user.last_name %>
        </td>
        <td>
          <%= user.dob %>
        </td>
        <td>
          <%= user.address %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
