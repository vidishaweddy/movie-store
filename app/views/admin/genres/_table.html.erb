<div class="admin-search">
  <%= form_tag(admin_genres_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Genre", id: "search-form" %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>

<table id="admin-table" class="pure-table pure-table-striped pure-table-bordered">
  <thead>
    <tr>
      <th> Title </th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre, admin_genre_path(genre) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="new-button">
  <%= link_to 'New Genre', new_admin_genre_path, class:"buttons button-primary" %>
</div>
