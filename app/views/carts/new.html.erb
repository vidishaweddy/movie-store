<h1><%= content_for(:title, "Movie Store") %></h1>
<div class="section">
  <div class="container">
    <div class="row main-low-margin">
      <%= form_for :cart, url: carts_create_path(@cart), method: :get do |f| %>
          <% if @cart.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@cart.errors.count, "error") %> prohibited this cart from being saved:</h2>
                <ul>
                  <% @cart.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          <h4>Payment Confirmation</h4>
          <h3 id="notice"><%= flash[:alert] %></h3>
          <div data-equalizer class="cart-movie large-12 column mb1">
            <div class="column large-2 text-center p0" data-equalizer-watch>
              <% if @movie.poster.present? %>
                <%= image_tag @movie.poster_url %>
              <% end %>
            </div>
            <div class="column large-3 glassy-bg text-left" data-equalizer-watch>
              <h3 class="scale ptm"> <%= @movie.title %> </h3>
              <h5 class="scale">$ <%= @movie.price %></h5>
              <h5 class="scale">Availability : <%= @movie.quantity %></h5>
              <br/>
              <h6> Quantity : </h6>
              <%= f.number_field :quantity, :value => 1 %>
              <%= f.hidden_field :movie_id, :value => @movie.id %>
              <div class="actions">
                <%= f.submit "Submit" %>
              </div>
            </div>
            <div class="column large-7 glassy-bg text-left" data-equalizer-watch>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
